{
  "name": "react-ts-storybook-cypress-seed",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start": "webpack serve --mode=development",
    "build": "cross-env NODE_ENV=production webpack --mode=production",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:components:browser": "cypress run --browser chrome --config-file ./cypress/configs/components.json --config video=false",
    "test:components:ci": "cypress run --config-file ./cypress/configs/components.json",
    "test:e2e:browser": "cypress run --browser chrome --config-file ./cypress/configs/e2e.json --config video=false",
    "test:e2e:ci": "cypress run --config-file ./cypress/configs/e2e.json",
    "cypress": "cypress open",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook --output-dir ./dist/storybook"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/daedalius/react-ts-storybook-cypress-seed.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/daedalius/react-ts-storybook-cypress-seed/issues"
  },
  "homepage": "https://github.com/daedalius/react-ts-storybook-cypress-seed#readme",
  "dependencies": {
    "@babel/core": "^7.12.16",
    "@babel/plugin-proposal-class-properties": "^7.12.13",
    "@babel/plugin-proposal-object-rest-spread": "^7.12.13",
    "@babel/plugin-proposal-optional-chaining": "^7.12.16",
    "@babel/preset-env": "^7.12.16",
    "@babel/preset-react": "^7.12.13",
    "@babel/preset-typescript": "^7.12.16",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^4.0.0-alpha.0",
    "copy-webpack-plugin": "^6.4.1",
    "cross-env": "^7.0.3",
    "css-loader": "^5.0.2",
    "file-loader": "^6.2.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "style-loader": "^2.0.0",
    "typescript": "^4.1.5",
    "url-loader": "^4.1.1",
    "webpack": "^4.46.0",
    "webpack-cli": "^4.5.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-react-jsx": "^7.12.16",
    "@cypress/react": "^4.16.4",
    "@cypress/webpack-preprocessor": "^5.6.0",
    "@mdx-js/loader": "^1.6.22",
    "@storybook/addon-actions": "^6.1.18",
    "@storybook/addon-essentials": "^6.1.18",
    "@storybook/addon-links": "^6.1.18",
    "@storybook/react": "^6.1.18",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@types/jest": "^26.0.20",
    "babel-jest": "^26.6.3",
    "cypress": "^6.5.0",
    "html-webpack-plugin": "^4.5.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "msw": "^0.28.2",
    "ts-node": "^9.1.1",
    "webpack-dev-server": "^3.11.2"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "jsxSingleQuote": false,
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "always",
    "endOfLine": "lf"
  },
  "msw": {
    "workerDirectory": "src"
  }
